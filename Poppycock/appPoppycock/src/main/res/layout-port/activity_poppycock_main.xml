<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity"
    >

    <TextView
        android:id="@+id/twNonsense"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text=""
        android:textSize="36sp"
        android:textIsSelectable="true"
        />

    <Button
        android:id="@+id/btnMoreNonsense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="@string/label_btnMoreNonsense"
        android:drawableStart="@drawable/ic_refresh_black_24dp"
        android:drawableLeft="@drawable/ic_refresh_black_24dp"
        android:onClick="onNextNonsenseClicked"
        />

</LinearLayout>